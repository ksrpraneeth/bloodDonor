<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/cover12"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/wallpaper"
            android:gravity="center" >
        </ImageView>

        <TextView
            android:id="@+id/det_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cover12"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:padding="10dp"
            android:text="TextView"
            android:textColor="#B52026"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/detdoblinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/det_name"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOB:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/det_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOB"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lastdatelinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detdoblinear"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LDD:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/det_ldd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LAST DATE OF DONATION"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bloodgrouptext12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lastdatelinear"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BloodGroup:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/det_bloodgroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BLOOD GROUP "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bloodgrouptext12"
            android:orientation="horizontal"
            android:weightSum="100" >

            <Button
                android:id="@+id/det_call"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="50"
                android:background="@drawable/buttoncolor"
                android:text="Call"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/det_share"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="50"
                android:background="@drawable/buttoncolor"
                android:text="share"
                android:textColor="#ffffff" />
        </LinearLayout>

        <com.example.blooddonor.CircularImageView
            android:id="@+id/profiledet_profilepic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignBottom="@+id/det_name"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="47dp"
            android:layout_weight="50"
            android:src="@drawable/userimage" />

    </RelativeLayout>

</ScrollView>