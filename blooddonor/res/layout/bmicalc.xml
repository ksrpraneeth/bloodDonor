<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
- 

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity" >

        <LinearLayout
            android:id="@+id/agelinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age :"
                android:textColor="#d71920"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/age"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="35dp"
                android:background="@drawable/edittextround"
                android:ems="10"
                android:inputType="number"
                android:paddingLeft="5dp" />
        </LinearLayout>
- 

        <LinearLayout
            android:id="@+id/radiolinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/agelinear"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="100" >
- 

            <RadioButton
                android:id="@+id/male"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_weight="50"
                android:text="Male"
                android:textColor="#d71920" />

            <RadioButton
                android:id="@+id/female"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/male"
                android:layout_weight="50"
                android:text="Female"
                android:textColor="#d71920" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/heightlinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radiolinear"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height :"
                android:textColor="#d71920"
                android:textSize="18sp" />
- 

            <EditText
                android:id="@+id/height"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/edittextround"
                android:ems="10"
                android:hint="Cms"
                android:inputType="number"
                android:paddingLeft="5dp" >

                <requestFocus />
            </EditText>
        </LinearLayout>
- 

        <LinearLayout
            android:id="@+id/heightlinear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radiolinear"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height :"
                android:textColor="#d71920"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/heightfeet"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/edittextround"
                android:ems="10"
                android:hint="Ft"
                android:inputType="number"
                android:paddingLeft="5dp" />
- 

            <EditText
                android:id="@+id/heightinch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/edittextround"
                android:ems="10"
                android:hint="Inch"
                android:inputType="number"
                android:paddingLeft="5dp" >

                <requestFocus />
            </EditText>
        </LinearLayout>
- 

        <LinearLayout
            android:id="@+id/weightlinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/heightlinear"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight :"
                android:textColor="#d71920"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/weight"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="13dp"
                android:background="@drawable/edittextround"
                android:ems="10"
                android:hint="Kgs"
                android:inputType="number"
                android:paddingLeft="5dp" />
        </LinearLayout>
- 

        <LinearLayout
            android:id="@+id/waistlinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weightlinear"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waist :"
                android:textColor="#d71920"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/waist"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="24dp"
                android:background="@drawable/edittextround"
                android:ems="10"
                android:inputType="number"
                android:paddingLeft="5dp" />
        </LinearLayout>
- 

        <LinearLayout
            android:id="@+id/hiplinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/waistlinear"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hip :"
                android:textColor="#d71920"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/hip"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="43dp"
                android:background="@drawable/edittextround"
                android:ems="10"
                android:inputType="number"
                android:paddingLeft="5dp" />
        </LinearLayout>

        <Button
            android:id="@+id/calculate"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@+id/hiplinear"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/buttoncolor"
            android:text="Calculate"
            android:textColor="#ffffff" />

        <Spinner
            android:id="@+id/spinnerft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/weightlinear"
            android:layout_alignTop="@+id/heightlinear"
            android:layout_toRightOf="@+id/calculate"
            android:background="@drawable/edittextround" />
    </RelativeLayout>

</ScrollView>